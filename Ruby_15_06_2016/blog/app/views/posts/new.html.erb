<h1>Add a New Post </h1>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>
        <%= pluralize(@post.errors.count, "error") %> prohibited
        this post from being saved:
    </h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit "Add a new Post"%>
  </p>

<% end %>